<div class="w-full h-screen">
  <h1 class="text-center font-bold mb-8 text-4xl mx-auto">Markdown Demo</h1>

  <%= form_with data: {controller: "live-elements"},
    class: "grid grid-cols-2 h-2/3 gap-4" do |form| %>

    <%= form.text_area :input, class: "h-2/3", autofocus: true,
      data: {action: {input: markdown_update_path}} %>

    <%= render partial: 'output', locals: {html: ''} %>
  <% end %>
</div>